# Zathura Configuration file
# see `man zathurarc` for more details

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row only
set pages-per-row 1

# stop at page boundaries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set scroll-wrap "true"  # test this option

# zoom settings
set zoom-min 10
set zoom-max 1000

# guioptions
set guioptions "s"

# font
set font "Dank Mono 12"

# title
set window-title-basename "true"
set statusbar-home-tilde "true"
set selection-clipboard "clipboard"

# recolor
set recolor "true"
set recolor-reverse-video "true"
set recolor-keephue "false"

# padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 4

set render-loading "true"
set scroll-step 50


# Custom Keybindings
map u scroll half-up
map d scroll half-down

map D toggle_page_mode

map r reload

map R rotate

map K zoom in
map J zoom out

map i recolor

unmap t
map tb toggle_statusbar



# colors settings[zathura]

# dark background
set default-bg "#0c090c"
set default-fg "#dee9f0"

# statusbar
set statusbar-bg "#9ba3a8"
set statusbar-fg "#9DD8F5"

# inputbar
set inputbar-bg "#0c090c"
set inputbar-fg "#dee9f0"

# notification
set notification-warning-bg "#0c090c"
set notification-warning-fg "#dee9f0"

# highlight
set highlight-color "#9DD8F5"
set highlight-active-color "#67CAF1"

# completion-highlight
set completion-highlight-fg "#E1BE98"
set completion-highlight-bg "#0c090c"

# completion
set completion-bg "#9ba3a8"
set completion-fg "#2AC4F5"

# notification
set notification-bg "#67CAF1"
set notification-fg "#0c090c"

# recolor
set recolor-darkcolor "#dee9f0"
set recolor-lightcolor "#0c090c"
