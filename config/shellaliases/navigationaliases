# alias ..="cd .."
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."

# directory specific
alias gtr='cd ~/.local/share/Trash/files'
alias gusb='cd /run/media/raytracer'

alias gv.='cd ~/Videos'
alias gvy='cd ~/Videos/youtube'

alias gm='cd ~/Music'
alias gmy='cd ~/Music/youtube'

alias gp.='cd ~/Pictures'
alias gbg='cd ~/Pictures/bgwallpapers'
alias gss='cd ~/Pictures/Screenshots'

alias gd='cd ~/Documents'
alias gtc='cd ~/Documents/nc/'
alias gtcc='cd ~/Documents/ncpp/'
alias gtp='cd ~/Documents/npython'
alias gts='cd ~/Documents/nshell'
alias gth='cd ~/Documents/nweb_designing'
alias gt.='cd ~/Documents/pdfs'

alias gD='cd ~/Downloads'
alias gdg='cd ~/Downloads/git-materials'
alias gdgg='cd ~/Downloads/git-materials/gitlab'
alias gdgm='cd ~/Downloads/git-materials/my_repos'

alias gc.='cd ~/.config'
alias gC='cd ~/.cache/cell'
alias gE='cd /etc'
alias gU='cd /usr'
alias gUs='cd /usr/share'

alias sc='cd ~/.local/bin/.scripts'
alias gnv='cd ~/.config/nvim'
alias shtp='cd /srv/http'

# move to cur_month screenshot_dir video_record_dir
alias curshotdir="cd $HOME/Pictures/Screenshots/$(date +"%Y-%m")"
alias currecdir="cd $HOME/Videos/recorded/$(date +"%Y-%m")"

# copy current path to clipboard
alias cpwd='pwd | xclip -selection clipboard'

# copy current directory name to clipboard
alias ccurdir="pwd | awk -F/ '{print \$NF}' | xclip -selection clipboard"

# some aliases for broot(br)
alias bll='br -dph'

# for colorls(might remove them)
alias cls='colorls -a --sd --report --gs'
alias cll='colorls -la --sd --gs'
alias clt='colorls --tree -a --sd'

alias mapp='xmodmap ~/.Xmodmap'

# lsd(ls deluxe)
alias lsd='lsd -Fa --group-dirs first'
alias lsdl='lsd -laF --group-dirs first --date relative'

# using exa as ls
alias lls='exa --grid -F --group-directories-first'
alias llsa='exa --grid -Fa --group-directories-first'
alias lll='exa -lFa --group-directories-first --color-scale --git'
alias treee='exa -TaFl'		# alternative is tree -Duhp

# using ls
alias ls='ls --color --classify -F --group-directories-first'
alias lsa='ls -a --color --classify -F --group-directories-first'
alias ll='ls -a --color --classify -F --format verbose --human-readable \
	--group-directories-first'
