super + d;{d,f,k}
    {dmenu_run -i -nb '#282828' -sf '#282828' -nf '#ebdbb2' -sb '#b8bb26' -fn "Iosevka Nerd Font Medium 11",rofi -show drun -i,kill $(pidof compton) && compton && dunstify -t 2000 "compton reloaded"}

# brightness
super + ctrl + {minus,equal}
	{light -U 5 && dunstify -t 500 "  current brightness->"`light -G`,light -A 5 && dunstify -t 500 "  current brightness is ->"`light -G`}

#notifications
super+n:{w,l,m,t}
	{notify-send --icon=network-wireless "Status" "`nmcli device status`",notify-send --icon=network-wireless "Wifi list" "`nmcli device wifi list`",notify-send --icon=audio-headphones -t 3000 "Now Playing" "`mpc`",notify-send -t 3000 "Temperature" "`sensors | grep temp1 | head -1 && sensors | grep temp1 | tail -1`"}
super+i:{m,p,v,d}
	{manbyrofi,pdfbyrofi,videosbyrofi,caffeine_like}

