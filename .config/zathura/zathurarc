# Zathura Configuration file
# see `man zathurarc` for more details

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row only
set pages-per-row 1

# stop at page boundaries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set scroll-wrap "true"  # test this option

# zoom settings
set zoom-min 10
set zoom-max 1000

# guioptions
set guioptions "s"

# font
set font "Dank Mono 12"

# dark background
set default-bg "#121212"
set default-fg "#dfdfdf"

# statusbar
set statusbar-bg "#4e4e4e"
set statusbar-fg "#b2b2b2"

# inputbar
set inputbar-bg "#121212"
set inputbar-fg "#dfdfdf"

# notification
set notification-warning-bg "#262626"
set notification-warning-fg "#1f1f24"

# highlight
set highlight-color "#b2b2b2"
set highlight-active-color "#87afaf"

# completion-highlight
set completion-highlight-fg "#262626"
set completion-highlight-bg "#af8787"

# completion
set completion-bg "#4e4e4e"
set completion-fg "#dfafaf"

# notification
set notification-bg "#87afaf"
set notification-fg "#262626"

# title
set window-title-basename "true"
set statusbar-home-tilde "true"
set selection-clipboard "clipboard"

# recolor
set recolor "true"
set recolor-darkcolor "#dfdfdf"
set recolor-lightcolor "#121212"
set recolor-reverse-video "true"
set recolor-keephue "false"

# padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 4

set render-loading "true"
set scroll-step 50


# Custom Keybindings
map u scroll half-up
map d scroll half-down

map D toggle_page_mode

map r reload

map R rotate

map K zoom in
map J zoom out

map i recolor

unmap t
map tb toggle_statusbar
