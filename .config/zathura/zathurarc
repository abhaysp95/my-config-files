# Zathura Configuration file
# see `man zathurarc` for more details

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row only
set pages-per-row 1

# stop at page boundaries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

# zoom settings
set zoom-min 10
set zoom-max 1000

# guioptions
set guioptions ""

# font
set font "Dank Mono 12"

# dark background
set default-bg "#1d2021"
set default-fg "#d4be98"

# statusbar
set statusbar-bg "#32302f"
set statusbar-fg "#ddc7a1"

# inputbar
set inputbar-bg "#1d2021"
set inputbar-fg "#d4be98"

# notification
set notification-warning-bg "#ea6962"
set notification-warning-fg "#1d2021"

# highlight
set highlight-color "#d8a657"
set highlight-active-color "#6a9fb5"

# completion-highlight
set completion-highlight-fg "#1d2021"
set completion-highlight-bg "#a9b665"

# completion
set completion-bg "#3c3836"
set completion-fg "#e2cca9"

# notification
set notification-bg "#90a959"
set notification-fg "#181818"

# title
set window-title-basename "true"
set statusbar-home-tilde "true"
set selection-clipboard "clipboard"

# recolor
set recolor "true"
set recolor-darkcolor "#d4be98"
set recolor-lightcolor "#1d2021"
set recolor-reverse-video "true"
set recolor-keephue "false"

# padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 4

set render-loading "true"
set scroll-step 50


# Custom Keybindings
map u scroll half-up
map d scroll half-down

map D toggle_page_mode

map r reload

map R rotate

map K zoom in
map J zoom out

map i recolor

map ts toggle_statusbar
