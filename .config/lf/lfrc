# Basic Settings

set preview false
set previewer ~/.config/lf/preview_file
#set previewer /usr/bin/pistol
set hidden true
set color256 true
set drawbox true
set icons true
set ignorecase true

# custom Functions
cmd open ${{
	case $(file --mime-type "$f" -bL) in
	text/*|application/json) $EDITOR "$f";;
	video/*|image/*/application/pdf) xdg-open "$f" & disown;;
	*) xdg-open "$f";;
	esac
}}

cmd mkdir ${{
	printf "Directory name: "
	read ans
	mkdir $ans
}}

cmd mkfile ${{
	printf "File name: "
	read ans
	touch $ans
}}

cmd mkopenfile ${{
	printf "File name to make and open: "
	read ans
	$EDITOR $ans
}}

cmd chmod ${{
	printf "Mode bits: "
	read ans

	for file in "$fx"; do
		chmod $ans $file
	done
}}

cmd sudomkfile ${{
	printf "File name(sudo): "
	read ans
	sudo touch $ans
}}

cmd sudomkopenfile ${{
	printf "File name to create and open(root): "
	read ans
	sudo $EDITOR $ans
}}

# think something for wallpaper

cmd fzf_jump ${{
	res="$(find . -maxdepth 3 | fzf --reverse --header='Jump to location')"
	if [ -f "$res" ]; then
		cmd="select"
	elif [ -d "$res" ]; then
		cmd="cd"
	fi
	lf -remote "send $id $cmd \"$res\""
}}

cmd broot_jump ${{
	f=$(mktemp)
	res="$(broot --outcmd $f && cat $f | sed 's/cd //')"
	rm -f "$f"
	if [ -f "$res" ]; then
		cmd="select"
	elif [-d "$res" ]; then
		cmd="cd"
	fi
	lf -remote "send $id $cmd \"$res\""
}}

