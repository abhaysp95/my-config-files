#!/usr/bin/env sh

# loop through all the attached batteries

for battery in /sys/class/power_supply/BAT?
do
	# get it's remaining capacity and charging status
	cpcty=$(cat "$battery"/capacity) || exit
	sttus=$(cat "$battery"/status)

	[ "$sttus" = "Discharging" ] && [ " $cpcty" -le 25 ] && warn=" âš  "

	# printing battery status replaced with unicode characters
	printf "%s%s%s\n" "$(echo "$sttus" | sed "s/,//;s/Full/ ğŸ”‹ /;s/Discharging/ ï‰‚ /;s/Not Charging/ ïŠ /;s/Charging/ ğŸˆ‚ /;s/Unknown/ â™» /;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$cpcty" | sed -e 's/$/%/')"
	unset warn
done
